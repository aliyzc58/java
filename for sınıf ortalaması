import java.util.Scanner;
public class Main
{
  public static void main (String[]args)
  {
    Scanner giris= new Scanner(System.in);
    double ortalama=0,toplam=0,dnot=0;
    double ortalamatoplam=0, sinifortalama=0;
    int ogrenci=2,ders=3;
    for (int i=1;i<=ogrenci;i++)
    {
        
        
        for(int j=1;j<=ders;j++)
        {
            System.out.println(i+"öğrencinin"+j+"ders notu");
            dnot=giris.nextDouble();
            toplam+=dnot;
            
        }
        
        ortalama=toplam/ders;
        System.out.println(i+"öğrenci prtalaması"+ortalama);
        toplam=0; ortalama=0;
        
        
    }
    System.out.println("Toplam sınıf ortalaması"+sinifortalama);
    
    
    
    
    
 }
}
