import java.util.Scanner;
public class Main
{
  public static void main (String[]args)
  {

    int[] a= {1,3,5,7};
		
		System.out.println(a[0]); //Ýlk elemana eriţim
		System.out.println(a[1]); //Ýkinci elemana eriţim
		
		a[0]=3; //içini değiştirebiliyoruz
		
		System.out.println("elemansayısı"+a.length);
		
		//Tüm dizi elemanlarýna eriţim
		for(int i=0; i<a.length;i++) {
			System.out.println(a[i]);	
		}

  }
}
